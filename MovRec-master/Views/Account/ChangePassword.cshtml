@model MovRec.Models.ChangePasswordViewModel
@{
    Layout = "_LayoutNoHeader";
    ViewData["Title"] = "Change Password";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/ChangePassword.css">
</head>
<body>
    <div class="change-password-container">
        <h1>Change Password</h1>
        
        @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            
            <div class="form-group">
                @Html.PasswordFor(m => m.OldPassword, new { @class = "input-field", placeholder = "Current Password" })
                
            </div>
            
            <div class="form-group">
                @Html.PasswordFor(m => m.NewPassword, new { @class = "input-field", placeholder = "New Password" })
                
            </div>
            
            <div class="form-group">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input-field", placeholder = "Confirm New Password" })
            </div>
            
            <button type="submit" class="submit-btn">Change Password</button>
            
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="error-message">
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                </div>
            }
        }
        
        <div class="back-to-profile">
            <a href="@Url.Action("UserProfile", "Account")">Back to Profile</a>
        </div>
    </div>
</body>
</html>