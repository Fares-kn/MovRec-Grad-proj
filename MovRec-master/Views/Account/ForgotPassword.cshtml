@{
    Layout = "_LayoutNoHeader";
    ViewData["Title"] = "Forgot Password";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/ForgotPassword.css"> <!-- Updated path -->
</head>

<body>
    <div class="forgot-password-container">
        <h1>Forgot Password</h1>
        <p>Enter your email address and we will send a code to reset your password.</p>
        <form id="forgotPasswordForm" asp-action="ForgotPassword" asp-controller="Account" method="post">
            <input type="email" id="email" class="input-field" placeholder="Email Address" required />
            <button type="submit" class="submit-btn">Send Code</button>
        </form>
        <div class="message" id="message"></div>
    </div>
</body>

</html>