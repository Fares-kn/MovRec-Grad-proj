@model MovRec.Models.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
    Layout = "_LayoutNoHeader";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/Login.css">
</head>

<body>
    <div class="login-container">
        <h1>Forgot Password</h1>
        <p style="color: white; margin-bottom: 20px;">Enter your email address to reset your password.</p>

        <form asp-action="ForgotPassword" method="post">
            <input asp-for="Email" class="input-field" type="email" placeholder="Email Address" required />
            <span asp-validation-for="Email" class="text-danger"></span>
            <button type="submit" class="login-btn">Send Reset Code</button>
        </form>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="error-message">
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            </div>
        }

        <div class="forgot-password">
            <a href="@Url.Action("Login", "Account")">Back to Login</a>
        </div>
    </div>
</body>

</html>